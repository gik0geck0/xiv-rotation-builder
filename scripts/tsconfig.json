{
    "compilerOptions": {
        "strict": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "composite": true,
        "target": "ES2020",
        "skipLibCheck": true,
        "baseUrl": ".",
        "rootDir": "..",
        "outDir": "build",
        "paths": {}
    },
    "include": ["./*.ts", "./*.json", "utils.js", "../src/modules/xiv/actionData/actionData.ts", "../src/modules/xiv/actionData/jobGuide.ts", "../src/modules/xiv/actionData/actionDataTypes.ts"],
    "exclude": [
        "build",
        "node_modules/**",
        "**/__tests__/**",
        "**/__benchmarks__/**",
        "**/build/**",
        "**/cjs/**"
    ]
}
